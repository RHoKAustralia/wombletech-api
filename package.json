{
  "name": "wombletech-api",
  "description": "Lambda hosted API created for Wombletech as part of RHoK'n'RHoL 2021",
  "private": true,
  "scripts": {
    "lint": "eslint --fix .",
    "prettier-format": "prettier --config .prettierrc.js 'src/**/*.ts' --write",
    "clean": "rm -rf ./dist",
    "build": "yarn clean && NODE_ENV=development webpack",
    "build-prd": "yarn clean && NODE_ENV=production webpack",
    "deploy": "yarn build-prd && sam deploy"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.83",
    "@types/glob": "^7.1.4",
    "@types/mailparser": "^3.0.3",
    "@types/node": "^16.9.1",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "aws-sdk": "^2.987.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-prettier": "^4.0.0",
    "glob": "^7.1.7",
    "prettier": "^2.4.0",
    "ts-loader": "^9.2.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3",
    "webpack": "^5.52.1",
    "webpack-cli": "^4.8.0"
  },
  "dependencies": {
    "ajv": "^8.6.3",
    "ajv-formats": "^2.1.1",
    "hashids": "^2.2.8",
    "mailparser": "^3.3.2"
  }
}
